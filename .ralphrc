# Progress tracking
CHECKPOINT_TASKS=15
PR_ON_PHASE_END=true

# Supervision
SUPERVISOR_NOTIFY=true
SUPERVISOR_CHAT_ID="-1003858866213"

# Logging
LOG_LEVEL=INFO
LOG_OUTPUT=true
